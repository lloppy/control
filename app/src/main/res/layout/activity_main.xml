<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

<!--    <ImageView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:src="@drawable/background_main_theme"-->
<!--        android:scaleType="centerCrop"-->
<!--        android:adjustViewBounds="true"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="CONNECT"
            android:backgroundTint="@color/grey"
            android:layout_marginLeft="@dimen/margin_button"
            android:layout_marginTop="@dimen/margin_button_top"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/orange"
            android:text="keyes arm" />

        <Button
            android:id="@+id/btnDisconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="DISCONNECT"
            android:backgroundTint="@color/grey"
            android:layout_marginRight="@dimen/margin_button"
            android:layout_marginTop="@dimen/margin_button_top"
            android:textColor="@color/black" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/leftLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_empty"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/transparent"/>

            <ImageButton
                android:id="@+id/btnUp"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/transparent"
                android:src="@drawable/button_top"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnLeft"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/transparent"
                android:src="@drawable/button_left"/>

            <ImageButton
                android:id="@+id/btn_mode1"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/transparent"
                android:src="@drawable/button_mode"/>

            <ImageButton
                android:id="@+id/btnRight"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/transparent"
                android:src="@drawable/button_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_empty2"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/transparent"/>

            <ImageButton
                android:id="@+id/btnDown"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/transparent"
                android:src="@drawable/button_buttom" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/rightLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_empty3"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/transparent"/>

            <ImageButton
                android:id="@+id/btnf"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/transparent"
                android:src="@drawable/button_f"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnl"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/transparent"
                android:src="@drawable/button_l"/>

            <ImageButton
                android:id="@+id/btn_mode2"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/transparent"
                android:src="@drawable/button_mode2"/>


            <ImageButton
                android:id="@+id/btnr"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/transparent"
                android:src="@drawable/button_r"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_empty4"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/transparent"/>

            <ImageButton
                android:id="@+id/btnb"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@color/transparent"
                android:src="@drawable/button_b" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:src="@drawable/urfu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>